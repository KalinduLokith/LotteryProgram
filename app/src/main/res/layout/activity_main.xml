<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/result1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#FCFDFF"
        android:text="Number 1"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/result2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#FCFDFF"
        android:text="Number 2"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/result3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#FCFDFF"
        android:text="Number 3"
        android:textSize="40sp" />

    <Button
        android:id="@+id/generateButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate 1"
        />

    <Button
        android:id="@+id/generateButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate 2"
        />

    <Button
        android:id="@+id/generateButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate 3"
        />
    <Button
        android:id="@+id/generateButtonAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate All"
        />


</LinearLayout>
